<div class="col-lg-9 px-3 mx-auto">
  <% if @truck.user == current_user %>
    <%= render 'shared/my_post_show' %>
    <% if @truck.status? %>
      <p class="text-muted text-center" style="font-size: 0.85rem;">—— ПОНУДА НА ТОВАР ——</p>
      <% if @suggested_loads.length == 0 %>
        <%= render 'shared/messages/no_matches_found' %>
      <% else %>
        <% @suggested_loads.each do |t| %>
          <%= link_to load_path(t) do %>
            <%= render 'shared/post', t: t %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <%= render 'shared/actions' %>
    <%= render 'shared/post_show' %>
  <% end %>
</div>
